export top.phj233.kjsky.model.Dish
    -> package top.phj233.kjsky.module.dto
import org.springframework.format.annotation.DateTimeFormat

specification DishPageQueryDTO{
    name
    page: Int
    pageSize: Int
    status
    categoryId
}

input DishQueryDTO{
    dynamic name?
    dynamic status
    dynamic categoryId?
}

input DishDTO{
    id
    name
    image
    description
    price
    status
    categoryId
    flavors{
        dynamic dishId?
        dynamic id?
        name
        value
    }
}
DishVO{
    #allScalars
    flat(category){
        id as categoryId
        name as categoryName
    }
    flavors{
        #allScalars
    }
    @DateTimeFormat(pattern = "yyyy-MM-dd HH:mm:ss")
    createTime
    @DateTimeFormat(pattern = "yyyy-MM-dd HH:mm:ss")
    updateTime
}
DishOverViewVO {
    sold: Int
    discontinued: Int
}

